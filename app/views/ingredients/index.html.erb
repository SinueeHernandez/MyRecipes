<h1>Listing ingredients</h1>

<%= link_to 'New Ingredient', new_ingredient_path %>
<table border=1>
  <tr>
    <th>Name</th>
    <th>description</th>
  </tr>
 
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.description %></td>
      <td><%= link_to 'Show', ingredient_path(ingredient) %></td>
      <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
      <td><%= link_to 'destroy', ingredient_path(ingredient),
              method: :delete,
              data: {confirm: 'are you sure?'} %></td>
    </tr>
  <% end %>
</table>
